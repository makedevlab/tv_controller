<h1>Tasks</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td>
          <% if task.thumbnail.attached? %>
            <%= image_tag task.thumbnail.variant(resize: '75x75') %>
          <% end %>
        </td>
        <td><%= link_to task.name, task %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-secondary' %></td>
        <td><%= link_to 'Remove', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path, class: 'btn btn-primary' %>
