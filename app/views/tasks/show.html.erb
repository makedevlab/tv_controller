<h1>Task</h1>
<h2><%= @task.name %></h2>

<p>
  <% if @task.thumbnail.attached? %>
    <%= image_tag @task.thumbnail.variant(resize: '300x300') %>
  <% else %>
    No Image
  <% end %>
</p>

<%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-primary' %>
<%= link_to 'Back', tasks_path, class: 'btn btn-secondary' %>
